<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.project.projectquiz.ExamActivity">

    <TextView
        android:id="@+id/txt_exmnme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_exmnme"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp" />

    <TextView
        android:id="@+id/txt_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_exmnme"
        android:layout_alignStart="@+id/txt_exmnme"
        android:layout_below="@+id/txt_exmnme"
        android:layout_marginTop="30dp"
        android:textSize="28sp" />

    <CheckBox
        android:id="@+id/chk_optn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_ques"
        android:layout_alignStart="@+id/txt_ques"
        android:layout_below="@+id/txt_ques"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp" />

    <CheckBox
        android:id="@+id/chck_optn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chk_optn1"
        android:layout_alignStart="@+id/chk_optn1"
        android:layout_below="@+id/chk_optn1"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp" />

    <CheckBox
        android:id="@+id/chk_optn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chck_optn2"
        android:layout_alignStart="@+id/chck_optn2"
        android:layout_below="@+id/chck_optn2"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp" />

    <CheckBox
        android:id="@+id/chk_optn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chk_optn3"
        android:layout_alignStart="@+id/chk_optn3"
        android:layout_below="@+id/chk_optn3"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/btn_nxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:onClick="nxt"
        android:text="next" />

    <Button
        android:id="@+id/btn_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_nxt"
        android:layout_alignBottom="@+id/btn_nxt"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/btn_nxt"
        android:layout_toStartOf="@+id/btn_nxt"
        android:onClick="Prev"
        android:text="Previous" />
</RelativeLayout>
